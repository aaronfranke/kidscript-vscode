{
	"fileTypes": [
		"ks", "kidscript"
	],
	"scopeName": "source.kidscript",
	"name": "KidScript",
	"patterns": [
		{ "include": "#base_expression" },
		{ "include": "#keywords" },
		{ "include": "#arithmetic_op" },
		{ "include": "#assignment_op" },
		{ "include": "#builtin_classes" },
		{ "include": "#any-method" },
		{
			"match": "\\b(game|math|random)\\b",
			"name": "support.variable.kidscript"
		},
		{
			"match": "(\\\\|;|:|`|~|!|@|\\$|%|\\*|/|&|\\||\\^|<|>|\\?|'|\\b[A-Z][a-zA-Z_0-9]*)",
			"name": "invalid.illegal.kidscript"
		}
	],
	"repository": {
		"comment": {
			"captures": {
				"1": {
					"name": "punctuation.definition.comment.number-sign.kidscript"
				}
			},
			"match": "(#).*$\\n?",
			"name": "comment.line.number-sign.kidscript"
		},
		"strings": {
			"patterns": [{
				"begin": "\"",
				"end": "\"",
				"name": "string.quoted.double.kidscript"
			}]
		},
		"base_expression": {
			"patterns": [
				{ "include": "#strings"},
				{ "include": "#comment"},
				{ "include": "#letter"},
				{ "include": "#numbers"}
			]
		},
		"keywords": {
			"match": "\\b(import|when|var|if|then|for|loop|end|new|and|or|is not|is|greater than|less than)\\b",
			"name": "keyword.language.kidscript"
		},
		"arithmetic_op": {
			"match": "ร|รท|\\+|-",
			"name": "keyword.operator.arithmetic.kidscript"
		},
		"assignment_op": {
			"match": "=",
			"name": "keyword.operator.assignment.kidscript"
		},
		"letter": {
			"match": "\\b(?i:true|false)\\b",
			"name": "constant.language.kidscript"
		},
		"numbers": {
			"patterns": [{
				"match": "\\b(?i:(\\d+\\.\\d*(e[\\-\\+]?\\d+)?))\\b",
				"name": "constant.numeric.kidscript"
			},
			{
				"match": "\\b(?i:(\\.\\d+(e[\\-\\+]?\\d+)?))\\b",
				"name": "constant.numeric.kidscript"
			},
			{
				"match": "\\b(?i:(\\d+e[\\-\\+]?\\d+))\\b",
				"name": "constant.numeric.kidscript"
			},
			{
				"match": "\\b\\d+\\b",
				"name": "constant.numeric.kidscript"
			}]
		},
		"var_def": {
			"match": "\\b(?i:(var))\\s+([a-z][a-z_0-9]*)",
			"captures": {
			  "1": { "name": "storage.type.var.kidscript" },
			  "2": { "name": "variable.language.kidscript" }
			}
		},
		"builtin_classes": {
			"match": "\\b(Alien|Apple|Arrow|Asteroid|Astronaut|Ball|Balloon|Barrel|BaseballBat|BaseballGlove|Baseball|BasketballHoop|Basketball|Bat|Bell|BirthdayCake|Blackhole|Block|BlocksT|BlocksZ|Blocks|Boat|Box|Brick|Bridge|Briefcase|Building|Bush|Button|Cactus|CandyCane|CandyCorn|CannonLeg|Cannon|Car|Castle|Cat|Catapult|Cave|Chain|Cheese|Cherries|Circle|Cloud|Clover|Coin|ConcertLight|ConstructionCone|ControlPanel|Cookie|Cow|DirectionalPad|Dog|Door|Doughnut|Dreidel|Elephant|Fence|Fireball|Fish|Flag|Flame|Flower|Football|Gate|Gear|Gem|Ghost|GingerbreadMan|GoalPost|Grapes|Hamburger|Hatch|Heart|Hospital|Hotdog|House|IceBox|Jewel|Key|Label|Ladder|LargePlatform|LaunchTower|LavaBox|Lava|List|Menorah|MetalBox|Meteor|Moon|Octopus|Orange|Ornament|Paddle|Paintbrush|PalmTree|Parachute|Pawn|PineTree|Pineapple|Pipe|Pizza|Plane|Planet|Plant|Platform|Platypus|Player|Poo|Pot|Pumpkin|Rabbit|Rainbow|Ramp|Rectangle|Rock|Rocket|Satellite|School|Shrub|Sign|Snack|Snowflake|Snowman|SoccerBall|SpaceDog|Speaker|Spider|Spikes|Spring|Sprout|Star|Stars|Stocking|Strawberry|Submarine|Sun|Sunglasses|Sword|Table|Telescope|Timer|Toggle|Trapdoor|Tree|Truck|Trumpet|Trunk|Turtle|TV|Volleyball|Water|Waterdrop|Window|WoodBox|Wreath|Wrench)\\b",
			"name": "support.class.library.kidscript"
		},
		"any-method": {
			"match": "\\b([a-z]\\w*)\\b(?=\\s*(?:[(]))",
			"name": "support.function.any-method.kidscript"
		}
	}
}
